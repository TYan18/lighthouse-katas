    "def sumLargestNumbers(nums):\n",
    "    if len(nums) == 0:\n",
    "        return 0\n",
    "    elif len(nums) == 1 or len(nums) == 2:\n",
    "        return sum(nums)\n",
    "    else:\n",
    "        nums.sort()\n",
    "        return nums[-2] + nums[-1]\n"
